<div class= {{inputRequiredTitleCssClasses}}>
  {{md-input label="Name of stack" value=stackTitle}}
</div>
{{smart-icon editing=true model=stackIcon}}

{{#if createFromLocation}}
  <div class= {{inputRequiredLocationCssClasses}}>
    {{md-input label="Git web URL for a stack with a docker-compose.yml file" value=stackLocation}}
  </div>
{{else}}
  <div class='docker-search'>
    <div class= {{inputRequiredDockerFileCssClasses}}>
      <label>Docker Compose File</label> {{docker-compose-search stackDockerFile=stackDockerFile}}
    </div>
  </div>
{{/if}}
{{md-btn text="Create" action="create"}} {{md-btn text="Clear" action="clear"}}
