<div class="service">
  <div class="row">
    <div class="col s2">
      {{service.name}} / <strong>{{service.status.title}}</strong>
    </div>

    {{!-- Scaling buttons --}}
    <div class="col s1 line-input scaling">
      {{md-btn class="btn secondary" action='decreaseServiceScaling' isDisabled=disableServiceActionButtons text=" - "}}
      {{service.scaling}}
      {{md-btn class="btn secondary" action='increaseServiceScaling' isDisabled=disableServiceActionButtons text=" + "}}
    </div>

    {{!-- Single container action buttons --}}
    {{!-- Up button --}}
    {{#if advancedMode}}
      <div class="col s1 line-input">
        {{md-btn class="btn secondary" action='pipelineServiceUp' isDisabled=(or (eq (await service.status.title) 'started') (eq (await service.status.title) 'starting') (eq (await service.status.title) 'up')) text="up"}}
      </div>
    {{/if}}

    {{!-- Start button --}}
    <div class="col s1 line-input">
      {{md-btn class="btn secondary" action='pipelineServiceStart' isDisabled=(or (eq (await service.status.title) 'started') (eq (await service.status.title) 'starting') (eq (await service.status.title) 'up')) text="start"}}
    </div>

    {{!-- Stop button --}}
    <div class="col s1 line-input">
      {{md-btn class="btn secondary" action='pipelineServiceStop' isDisabled=(and (not-eq (await service.status.title) 'started') (not-eq (await service.status.title) 'starting') (not-eq (await service.status.title) 'up')) text="stop"}}
    </div>

    {{!-- Restart button --}}
    <div class="col s1 line-input">
      {{#if service.restarting}}
        Restarting...
      {{else}}
        {{md-btn class="btn secondary" action='pipelineServiceRestart' isDisabled=disableServiceActionButtons text="restart"}}
      {{/if}}
    </div>

    {{!-- Log toggle --}}
    <div class="col s1 line-input log">
        <div class="btn secondary {{if disableServiceActionButtons 'disabled'}}"><i class="material-icons">bug_report</i></div>
    </div>

    <div class="col s1 line-input">
      <label>
        {{md-check id=(concat "modal-" service.name "-stats") checked=getServiceStats}}
      </label>
    </div>

    {{#if cpuServiceStats}}
      <strong>% CPU: </strong>
      <span>{{round-two-decimals (get-property (get-head cpuServiceStats.stats) 'cpu-percentage')}}</span>

      <strong>Mem Usage/Limit: </strong>
      <span>
        {{round-two-decimals (byte-to-megabyte (get-property (get-head cpuServiceStats.stats) 'mem-usage'))}}/
        {{round-two-decimals (byte-to-megabyte (get-property (get-head cpuServiceStats.stats) 'mem-limit'))}}
      </span>
    {{/if}}


    {{!-- {{#if cpuServiceStats}}
      {{#tether-dialog
          target=(concat "#modal-" service.name "-stats")
          targetAttachment='top right'
          attachment='top left'
          hasOverlay=false
          clickOutsideToClose=true
          container-class='help-box'}}
        <span>% CPU: {{round-two-decimals cpuServiceStats.data.attributes.cpu-percentage}}</span>
        <span>Mem Usage/Limit: {{round-two-decimals (byte-to-megabyte cpuServiceStats.data.attributes.mem-usage)}}/{{round-two-decimals (byte-to-megabyte cpuServiceStats.data.attributes.mem-limit)}} Mb</span>
        <span>% Memory: {{round-two-decimals cpuServiceStats.data.attributes.mem-percentage}}</span>
      {{/tether-dialog}}
    {{/if}} --}}

  </div>

  {{!-- Logging information about the container --}}
  {{#if service.showLogs}}
    <div class="log-container">
      <div class="btn" {{action "refreshLogs"}}>
        {{#if service.refreshingLogs}}...{{else}}<i class="material-icons">refresh</i>{{/if}}
      </div>
      <div class="logs">
        {{service.logs}}
      </div>
    </div>
  {{/if}}
</div>
