{{#if editing}}
  {{md-input label="MD icon name" value=model.mdlIcon}}
  {{md-input label="Http icon name" value=model.icon}}
  {{#if canToggleEdit}}
    {{md-btn text="Save" action="save"}}
  {{/if}}
{{else}}
  {{#if model.mdlIcon}}
    <i class="material-icons">{{model.mdlIcon}}</i>
    {{else}}
    {{#if model.icon}}
      <img src={{model.icon}} />
    {{/if}}
  {{/if}}
  {{#if canToggleEdit}}
    {{md-btn text="Edit" action="edit"}}
  {{/if}}
{{/if}}